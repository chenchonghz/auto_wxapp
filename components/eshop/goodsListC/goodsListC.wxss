.c {
    overflow: hidden;
    list-style: none;
}

.c .item {
    width: 50%;
    padding: 1px;
    box-sizing: border-box;
    float: left;
    box-shadow: 1px 1px 0 0 #eee;
    text-align: left;
    position: relative;
    display: list-item;
    margin: 0;
    outline: none;
}

.c .item .a {
    color: #666;
    text-decoration: none;
    outline: none;
    margin: 0;
    padding: 0;
}

.c .item .a .img {
     text-align: center;
     overflow: hidden;
     height: 180px;
     box-sizing: border-box;
     background: #f6f6f6;
     padding: 5px;
 }

.c .item .a .img image {
    max-width: 100%;
    height: 170px;
}

.img {
    border: none;
    vertical-align: middle;
}