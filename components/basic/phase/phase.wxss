
/* 字体居左显示  有时不写也是居左显示  */
.text-l{text-align: left;}

/* 字体居中显示  */
.text-c{text-align: center;}

/* 字体居右显示  */
.text-r{text-align: right;}


.bg_default{
    background-color: #fff;
}


/*  底部边框样式(实线) */
.border-b-s{border-bottom-style: solid;}
/*  底部边框宽度 */
.border-b-w{border-bottom-width: 1px;}
/*  底部边框颜色 */
.border-b-c{border-bottom-color: #ddd;}

/*   阴影  */
.textS{text-shadow: 2px 2px 4px #000000;}
