/*  背景色 */
.bg{background-color: #fff;}

/*  边框样式 */
.border-s{border-style: solid;}
/*  边框宽度 */
.border-w{border-width: 1px;}
/*  边框颜色 */
.border-c{border-color: #ddd;}

/*   阴影  */
.boxS{box-shadow: 2px 2px 4px rgba(0,0,0,.2);}

/*  透明度 */
.opc{opacity:0.7;}

/*  字号 */
.fontS{font-size: 16px;}
/* 字体居左显示  有时不写也是居左显示  */
.text-l{text-align: left;}
/* 字体居中显示  */
.text-c{text-align: center;}
/* 字体居右显示  */
.text-r{text-align: right;}
/*  下方外边距 */
.mg-b{margin-bottom:12px;}
/*  字体加粗 */
.fontW{font-weight: bold}
/*  字体倾斜 */
.fontI{font-style:italic}
/*  字体下划线 */
.text-under{text-decoration: underline;}
/* 行高 */
.line-h{line-height:1;}
/* 行高 */
.line-h2{line-height:24px;}

/* 清除浮动  必须加 */
.clearfix {zoom: 1;overflow: hidden;}

/* 宽度 */
.width{width:49%;box-sizing: border-box;}

/* 左浮动 */
.fl{float:left;}

/* 右浮动 */
.fr{float:right;}

/*    设置圆角 */
.img-circle2{border-radius: 4px;overflow: hidden;}

.bg_default{
    background-color: #fff;
}
